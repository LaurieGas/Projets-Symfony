{% extends 'base.html.twig' %}

{% block title %}Argonautes{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/style.css">
{% endblock %}

{% block body %}
{# header #}
<header>
  <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo">
    Les Argonautes
  </h1>
</header>

{# main #}
<main>
	<div class="container">
		<h2>Ajouter un(e) Argonaute</h2>

        {# formulaire #}
		<div class="form">
            <p>Nom de l'argonaute</p>
            {{ form(form) }}
            {{ form_errors(form) }}
        </div>

        <h2>Membres de l'équipage</h2>

        {# liste argonautes #}
        <section class="team-list">
            <div class="column">
            {% for x in argonaute |slice(0,17) %}
                <p>{{ x.name |raw }}</p>
                {% endfor %}
	        </div>
        
            <div class="column">
            {% for x in argonaute |slice(18,17) %}
                <p>{{ x.name |raw }}</p>
            {% endfor %}
	        </div>

             <div class="column">
            {% for x in argonaute |slice(35, 16) %}
                <p>{{ x.name |raw }}</p>
            {% endfor %}
	        </div>
        </section>
    </div>
</main>

{# footer #}
<footer>
    <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
</footer>
{% endblock %}


      
 